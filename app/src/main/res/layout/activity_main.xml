<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@android:color/white">

    <FrameLayout
        android:id="@+id/cardContainer"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        
    <androidx.cardview.widget.CardView
        android:id="@+id/cardBack"
        android:layout_width="350dp"
        android:layout_height="200dp"
        app:cardBackgroundColor="#820AD1"
        app:cardElevation="50dp"
        app:cardCornerRadius="15dp"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="122dp">

        <View
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="18dp"
            android:background="@android:color/white"/>

        <EditText
            android:id="@+id/numero"
            android:layout_width="214dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="25dp"
            android:background="@null"
            android:hint="1234 5678 1234 5678"
            android:shadowColor="@color/black"
            android:textColor="@color/white"
            android:textColorHint="#80FFFFFF"
            android:textSize="20dp"
            android:textStyle="bold"></EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="30"
            android:layout_marginStart="15dp"
            android:text="MÃªs/Ano:"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:textStyle="bold"></TextView>

        <EditText
            android:id="@+id/validade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="72dp"
            android:layout_marginBottom="30dp"
            android:background="@null"
            android:hint="MM/AA"
            android:shadowColor="@color/black"
            android:textColor="@color/white"
            android:textColorHint="#80FFFFFF"
            android:textSize="14dp"></EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="30"
            android:layout_marginStart="150dp"
            android:text="CVV:"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:textStyle="bold"></TextView>

        <EditText
            android:id="@+id/cvv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="180dp"
            android:layout_marginBottom="30dp"
            android:background="@null"
            android:hint="123"
            android:shadowColor="@color/black"
            android:textColor="@color/white"
            android:textColorHint="#80FFFFFF"
            android:textSize="14dp"></EditText>
    </androidx.cardview.widget.CardView>

    </FrameLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardFront"
        android:layout_width="350dp"
        android:layout_height="200dp"
        app:cardBackgroundColor="#820AD1"
        app:cardCornerRadius="15dp"
        app:cardElevation="50dp"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="55dp">

        <EditText
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:background="@null"
            android:hint="Fulano Ciclano Beltrano"
            android:shadowColor="@color/black"
            android:textColor="@color/white"
            android:textColorHint="#80FFFFFF"
            android:textSize="18dp">
        </EditText>

        <ImageView
            android:id="@+id/logoNubank"
            android:layout_width="83dp"
            android:layout_height="83dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="7dp"
            app:srcCompat="@drawable/untitled" />

        <ImageView
            android:id="@+id/logoMastercard"
            android:layout_width="67dp"
            android:layout_height="54dp"
            android:layout_gravity="end"
            android:layout_marginEnd="5dp"
            app:srcCompat="@drawable/mastercard_logo_wine" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            app:srcCompat="@drawable/icons8_chip_do_cart_o_sim_80" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>